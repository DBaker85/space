{
  "name": "space",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "prepare": "husky install",
    "start:server": "yarn workspace client build && yarn copy:files && yarn workspace server start",
    "start:client": "yarn workspace client start",
    "start:storybook": "yarn workspace client storybook",
    "generate:codegen": "graphql-codegen --config codegen.yml",
    "copy:files": "ts-node --skip-project scripts/copy-files.ts",
    "build:client": "yarn workspace client build",
    "build:server": "yarn workspace client build && yarn copy:files && yarn workspace server build"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.16.4",
    "@graphql-codegen/introspection": "2.2.3",
    "@graphql-codegen/typescript": "2.8.7",
    "@graphql-codegen/typescript-graphql-files-modules": "2.2.1",
    "@graphql-codegen/typescript-mongodb": "2.4.6",
    "@graphql-codegen/typescript-operations": "2.5.12",
    "@graphql-codegen/typescript-react-apollo": "3.3.7",
    "@graphql-codegen/typescript-resolvers": "2.7.12",
    "fs-extra": "^11.1.0",
    "husky": "8.0.3",
    "prettier": "2.8.2",
    "pretty-quick": "3.1.3",
    "ts-node": "^10.9.1",
    "typescript": "4.9.4"
  },
  "packageManager": "yarn@3.2.1",
  "resolutions": {
    "styled-components": "6.0.0-beta.11",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}

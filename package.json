{
  "name": "space",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "bootstrap": "npm i && lerna bootstrap",
    "build": "lerna run build --scope client --stream && lerna run build --scope server --stream",
    "start:server": "lerna run build --scope client && lerna run start --scope server --stream",
    "start:storybook": "lerna run storybook --stream",
    "start:client": "lerna run start --scope client --stream",
    "test": "lerna run test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^7.0.2",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "typescript": "4.2"
  }
}

{
  "name": "space",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "prepare": "husky install",
    "start:server": "yarn workspace client build && yarn copy:files && yarn workspace server start",
    "start:client": "yarn workspace client start",
    "start:storybook": "yarn workspace client storybook",
    "generate:codegen": "graphql-codegen --config codegen.yml",
    "copy:files": "ts-node --skip-project scripts/copy-files.ts",
    "build:client": "yarn workspace client build",
    "build:server": "yarn workspace client build && yarn copy:files && yarn workspace server build"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/typescript": "2.4.11",
    "@graphql-codegen/typescript-graphql-files-modules": "2.1.1",
    "@graphql-codegen/typescript-mongodb": "2.3.9",
    "@graphql-codegen/typescript-operations": "2.4.0",
    "@graphql-codegen/typescript-react-apollo": "3.2.14",
    "@graphql-codegen/typescript-resolvers": "2.6.4",
    "fs-extra": "^10.1.0",
    "husky": "7.0.4",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "ts-node": "^10.9.1",
    "typescript": "4.6.3"
  },
  "packageManager": "yarn@3.2.1",
  "resolutions": {
    "styled-components": "6.0.0-alpha.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
